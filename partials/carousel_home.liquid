{% if options.slider-1 == empty and options.slider-2 == empty and options.slider-3 == empty %}
    <!-- Carousel Empty -->
    <div class="carousel slide" data-ride="carousel" id="carousel-home">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="{{ 'slider-1-demo.jpg' | asset }}" alt="{% t 'Welcome to' %} {{store.name}}">
                <div class="carousel-info">
                    <div class="carousel-info-inner">
                        <h2>{% t 'Welcome to' %}
                            {{store.name}}</h2>
                        <a class="butn butn-inverse" href="mujer" title="Mujer">{% t 'Go to collection' %}</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ 'slider-2-demo.jpg' | asset }}" alt="{% t 'Welcome to' %} {{store.name}}">
                <div class="carousel-info">
                    <div class="carousel-info-inner">
                        <h2>{% t 'Welcome to' %}
                            {{store.name}}</h2>
                        <a class="butn butn-inverse" href="mujer" title="Mujer">{% t 'Go to collection' %}</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ 'slider-3-demo.jpg' | asset }}" alt="{% t 'Welcome to' %} {{store.name}}">
                <div class="carousel-info">
                    <div class="carousel-info-inner">
                        <h2>{% t 'Welcome to' %}
                            {{store.name}}</h2>
                        <a class="butn butn-inverse" href="mujer" title="Mujer">{% t 'Go to collection' %}</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="carousel-control-prev" data-slide="prev" href="#carousel-home" role="button">
            <span aria-hidden="true" class="carousel-control-prev-icon"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" data-slide="next" href="#carousel-home" role="button">
            <span aria-hidden="true" class="carousel-control-next-icon"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    {%else%}

    {% if options.no_text_slider != true %}
        <div class="carousel slide" data-ride="carousel" id="carousel-home">
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                {% unless options.slider-1 == empty %}
                    <div class="carousel-item active" style="background-image: url('{{ options.slider-1 }}');">
                        <div class="carousel-info">
                            <div class="carousel-info-inner">
                                {% if options.title-slider-1 != empty %}
                                    <h2>{{ options.title-slider-1 }}</h2>
                                {% endif %}
                                {% if options.button-link-slider-1 != empty %}
                                    <a href="{{ options.button-link-slider-1 }}" class="butn butn-inverse" title="{{ options.text-button-slider-1 }}">{{ options.text-button-slider-1 }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endunless %}
                {% unless options.slider-2 == empty %}
                    <div class="carousel-item" style="background-image: url('{{ options.slider-2 }}');">
                        <div class="carousel-info">
                            <div class="carousel-info-inner">
                                {% if options.title-slider-2 != empty %}
                                    <h2>{{ options.title-slider-2 }}</h2>
                                {% endif %}
                                {% if options.button-link-slider-2 != empty %}
                                    <a href="{{ options.button-link-slider-2 }}" class="butn butn-inverse" title="{{ options.text-button-slider-2 }}">{{ options.text-button-slider-2 }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endunless %}
                {% unless options.slider-3 == empty %}
                    <div class="carousel-item" style="background-image: url('{{ options.slider-3 }}');">
                        <div class="carousel-info">
                            <div class="carousel-info-inner">
                                {% if options.title-slider-3 != empty %}
                                    <h2>{{ options.title-slider-3 }}</h2>
                                {% endif %}
                                {% if options.button-link-slider-3 != empty %}
                                    <a href="{{ options.button-link-slider-3 }}" class="butn butn-inverse" title="{{ options.text-button-slider-3 }}">{{ options.text-button-slider-3 }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endunless %}
            </div>
            <!-- Controls -->
            {% if options.slider-2.size > 0 %}
                <a class="carousel-control-prev" data-slide="prev" href="#carousel-home" role="button">
                    <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" data-slide="next" href="#carousel-home" role="button">
                    <span aria-hidden="true" class="carousel-control-next-icon"></span>
                    <span class="sr-only">Next</span>
                </a>
            {% endif %}
        </div>
        {%else%}
        <div class="carousel slide" data-ride="carousel" id="carouselHomeControls">
            <div class="carousel-inner">
                {% unless options.slider-1 == empty %}
                    <div class="carousel-item active">
                        {% if options.button-link-slider-1 != empty %}
                            <a class="link-banner" href="{{ options.button-link-slider-1 }}">
                            {% endif %}
                            <img class="d-block w-100" src="{{ options.slider-1 }}" alt="{{store.name}}">
                            {% if options.button-link-slider-1 != empty %}
                            </a>
                        {% endif %}
                    </div>
                {% endunless %}
                {% unless options.slider-2 == empty %}
                    <div class="carousel-item">
                        {% if options.button-link-slider-2 != empty %}
                            <a class="link-banner" href="{{ options.button-link-slider-2 }}">
                            {% endif %}
                            <img class="d-block w-100" src="{{ options.slider-2 }}" alt="{{store.name}}">
                            {% if options.button-link-slider-2 != empty %}
                            </a>
                        {% endif %}
                    </div>
                {% endunless %}
                {% unless options.slider-3 == empty %}
                    <div class="carousel-item">
                        {% if options.button-link-slider-3 != empty %}
                            <a class="link-banner" href="{{ options.button-link-slider-3 }}">
                            {% endif %}
                            <img class="d-block w-100" src="{{ options.slider-3 }}" alt="{{store.name}}">
                            {% if options.button-link-slider-3 != empty %}
                            </a>
                        {% endif %}
                    </div>
                {% endunless %}
            </div>
            <a class="carousel-control-prev" data-slide="prev" href="#carouselHomeControls" role="button">
                <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" data-slide="next" href="#carouselHomeControls" role="button">
                <span aria-hidden="true" class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endif %}

{% endif %}
