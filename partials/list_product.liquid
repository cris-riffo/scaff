<div class="product-block trsn mb-3">
    {% if product.images.size > 0 %}
        <a href="{{product.url}}" class="product-image">
            <img class="img-fluid img-portfolio img-hover mb-2" src="{{product.images.first | resize: '265x265'}}" alt="{{product.name}}"/>
            {% if product.discount > 0 %}
                <span class="status-tag sale">{% t "Sale" %}</span>
            {% endif %}
            {% if product.stock == 0 and product.stock_unlimited == false %}
                <span class="status-tag">{% t "Out of Stock" %}</span>
            {% elsif product.status == 'not-available' %}
                <span class="status-tag">{% t "Not Available" %}</span>
                {% else %}
            {% endif %}
        </a>
    {% else %}
        <a href="{{product.url}}" class="product-image">
            <img class="img-fluid img-portfolio img-hover mb-2" src="{{ 'no-image-home.png' | asset }}" alt="{{product.name}}">
            {% if product.discount > 0 %}
                <span class="status-tag sale">{% t "Sale" %}</span>
            {% endif %}
            {% if product.stock == 0 and product.stock_unlimited == false %}
                <span class="status-tag">{% t "Out of Stock" %}</span>
            {% elsif product.status == 'not-available' %}
                <span class="status-tag">{% t "Not Available" %}</span>
                {% else %}
            {% endif %}
        </a>
    {% endif %}
    <div class="caption">
        <h4>
            <a href="{{product.url}}">{{ product.name | truncatewords:10 }}</a>
        </h4>
